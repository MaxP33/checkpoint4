{% extends 'base.html.twig' %}

{% block title %}Évènement{% endblock %}

{% block body %}
    <h1>Évènement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ event.location }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.description }}</td>
            </tr>
            <tr>
                <th>Date de début</th>
                <td>{{ event.startDate ? event.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de fin</th>
                <td>{{ event.endDate ? event.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ event.duration }}</td>
            </tr>
            <tr>
                <th>Date de création de l'évènement</th>
                <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn mr-3" href="{{ path('event_edit', {'id': event.id}) }}">Éditer</a>
        {{ include('event/_delete_form.html.twig') }}
    </div>
    <div class="d-flex mt-4">
        <a class="btn" href="{{ path('event_index') }}">Liste des évènements</a>
    </div>
{% endblock %}
