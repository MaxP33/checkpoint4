{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    {% include '_nav.html.twig' %}
    <div>
        <div class="background-contact">
            <div class="container row d-flex justify-content-center mx-auto">
                <div class="col-6 mt-5">
                    <div class="text-center">
                        <h1>Tentez de gagner une place !</h1>
                    </div>
                    <div class="d-flex justify-content-center my-4">
                        <img class="w-75 rounded" src="{{ asset('build/images/casino.jpg') }}" alt="roulette casino">
                    </div>
                    <div class="d-flex justify-content-center">
                        {{ form_start(form, {'attr' : {'class' : 'w-100'}}) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="mr-2">
                            <i class="fas fa-coins"></i>
                        </div>
                        <div id="game_gain" class="gain-input">

                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn mb-5" id="playGameBtn">Jouer !</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('casinoGame') }}
{% endblock %}
