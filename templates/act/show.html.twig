{% extends 'base.html.twig' %}

{% block title %}Numéro{% endblock %}

{% block body %}
    <h1>Numéro</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ act.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ act.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ act.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ act.createdAt ? act.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex">
        <a class="btn mr-3" href="{{ path('act_edit', {'id': act.id}) }}">Éditer</a>
        {{ include('act/_delete_form.html.twig') }}
    </div>
    <div class="d-flex mt-4">
        <a class="btn" href="{{ path('act_index') }}">Liste des numéros</a>
    </div>
{% endblock %}
